<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBK"
    tools:context=".overviewActivity">

    <Button
        android:id="@+id/backButton2"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:background="@color/mcGreen"
        android:fontFamily="@font/minecraftten"
        android:onClick="pressedBack"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="676dp"
        android:fontFamily="@font/minecraftten"
        android:text="select your pet"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_pet1"
        android:layout_width="214dp"
        android:layout_height="198dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="100dp"
        android:background="@color/mcGreen"
        android:fontFamily="@font/minecraft"
        android:onClick="pressedPet1"
        android:text="Pet 1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button_pet2"
        android:layout_width="214dp"
        android:layout_height="198dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="151dp"
        android:background="@color/mcGreen"
        android:fontFamily="@font/minecraft"
        android:onClick="pressedPet2"
        android:text="Pet 2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_pet1" />
</androidx.constraintlayout.widget.ConstraintLayout>